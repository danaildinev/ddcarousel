{
	"name": "ddcarousel",
	"version": "1.4.1",
	"description": "Simple and fast carousel slider written in vannila JS",
	"main": "index.js",
	"scripts": {
		"dist": "npm-run-all babeljs minifyjs buildcss minifycss license",
		"babeljs": "babel src/ddcarousel.js --out-file dist/ddcarousel.js --source-maps --presets=@babel/preset-env",
		"minifyjs": "uglifyjs --compress --comments /^!/ --output dist/ddcarousel.min.js -- dist/ddcarousel.js",
		"testjs": "uglifyjs --output src/testing/ddcarousel.js -- src/ddcarousel.js",
		"watchsass": "sass --watch --style=compressed --load-path=scss src/ddcarousel.scss src/testing/ddcarousel.css",
		"buildcss": "sass --style=compressed --load-path=scss src/ddcarousel.scss src/ddcarousel.css",
		"minifycss": "uglifycss src/ddcarousel.css > dist/ddcarousel.min.css",
		"license": "node utils/post-dist.js",
		"test": "npm run dist"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/danaildinev/ddcarousel.git"
	},
	"keywords": [
		"js",
		"carousel",
		"slider",
		"vanilla",
		"free"
	],
	"author": "Danail Dinev",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/danaildinev/ddcarousel/issues"
	},
	"homepage": "https://github.com/danaildinev/ddcarousel#readme",
	"browserslist": [
		"ie >= 10",
		"edge >= 15",
		"chrome >= 37",
		"firefox >= 32",
		"opera >= 23",
		"safari >= 6.2",
		"ios >= 9"
	],
	"devDependencies": {
		"@babel/cli": "^7.13.14",
		"@babel/core": "^7.14.3",
		"@babel/preset-env": "^7.14.4",
		"babel-plugin-minify-mangle-names": "^0.5.0",
		"babel-plugin-minify-simplify": "^0.5.1",
		"babel-plugin-remove-import-export": "^1.1.1",
		"babel-plugin-transform-minify-booleans": "^6.9.4",
		"babel-plugin-transform-remove-console": "^6.9.4",
		"copyfiles": "^2.4.1",
		"npm-run-all": "^4.1.5",
		"sass": "^1.97.3",
		"uglify-js": "^3.13.3",
		"uglifycss": "0.0.29"
	}
}